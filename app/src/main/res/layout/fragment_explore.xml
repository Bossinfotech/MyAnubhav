<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:context=".fragments.ExploreFragment">

    <LinearLayout
        android:id="@+id/topbackground"
        android:background="@drawable/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="-2dp"
        android:layout_height="87dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@+id/topbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/wel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:text="Welcome!"/>

        <TextView
            android:id="@+id/texttwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/wel"
            android:paddingLeft="15dp"
            android:text="Let's Schedule your projects with MyAnubhav"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="110dp"
            android:layout_height="92dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/freelanceone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/texttwo"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boxtwo"
        android:layout_marginTop="220dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/review"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/companyreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Reviews"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="26dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boxtwo"
        android:layout_marginTop="320dp"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/meeting"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/interviewpreparation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interview Preparation"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boxtwo"
        android:layout_marginTop="420dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/suitcase"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/latestjobs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latest Jobs"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boxtwo"
        android:layout_marginTop="520dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/sal"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Salary"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boxtwo"
        android:layout_marginTop="620dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/salcal"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/salarycalculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary Calculator"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

</RelativeLayout>


