<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InterviewExperience">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        android:orientation="vertical"
        android:background="@color/company_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/rating_details"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="NestedWeights" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_rating" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/card_background"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/company"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                app:shapeAppearanceOverlay="@style/Button4"
                app:boxStrokeColor="@color/indigo_A200"
                app:boxStrokeWidth="1dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                app:hintTextColor="@color/indigo_A200"
                app:helperText="Required*"
                app:helperTextTextColor="@color/red_a200"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName|textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/job_title"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                app:shapeAppearanceOverlay="@style/Button4"
                app:boxStrokeColor="@color/indigo_A200"
                app:boxStrokeWidth="1dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                app:hintTextColor="@color/indigo_A200"
                app:helperText="Required*"
                app:helperTextTextColor="@color/red_a200"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/job_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName|textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/do_you_currently_work_here"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="20dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_bg"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="15dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/blue_900"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"/>
                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_bg"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/blue_900"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"/>
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/started_working_on"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:boxStrokeColor="@color/indigo_A200"
                    app:boxStrokeWidth="1dp"
                    android:hint="@string/select_month"
                    app:hintTextColor="@color/indigo_A200"
                    app:shapeAppearanceOverlay="@style/Button4"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/select_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="none"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:boxStrokeColor="@color/indigo_A200"
                    app:boxStrokeWidth="1dp"
                    android:hint="@string/select_year"
                    app:hintTextColor="@color/indigo_A200"
                    android:layout_weight="1"
                    app:shapeAppearanceOverlay="@style/Button4"
                    android:layout_marginTop="15dp"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/select_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="none"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/employment_ended_on"
                    android:textSize="17sp"
                    android:textColor="@color/blue_900"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginEnd="5dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        app:boxStrokeColor="@color/indigo_A200"
                        app:boxStrokeWidth="1dp"
                        android:hint="@string/select_month"
                        app:hintTextColor="@color/indigo_A200"
                        app:shapeAppearanceOverlay="@style/Button4"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/select_month1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="none"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        app:boxStrokeColor="@color/indigo_A200"
                        app:boxStrokeWidth="1dp"
                        android:hint="@string/select_year"
                        app:hintTextColor="@color/indigo_A200"
                        android:layout_weight="1"
                        app:shapeAppearanceOverlay="@style/Button4"
                        android:layout_marginTop="15dp"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/select_year1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="none"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate_the_company_on_the_following_criteria"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overall_rating"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp">
            </RatingBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_life_balance"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp">
            </RatingBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/salary_amp_benefits"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp">
            </RatingBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/promotions_or_appraisal"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp">
            </RatingBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job_security"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp">
            </RatingBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skill_development_learning"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp">
            </RatingBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_satisfaction"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp">
            </RatingBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_culture"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp">
            </RatingBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_do_you_like_about_working_at_your_company"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/likes"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                app:boxStrokeColor="@color/indigo_A200"
                app:boxStrokeWidth="1dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                app:hintTextColor="@color/indigo_A200"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/company1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:gravity="top"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:textColorHint="#757575"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_do_you_dislike_about_working_at_your_company"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/dislikes"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                app:boxStrokeColor="@color/indigo_A200"
                app:boxStrokeWidth="1dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                app:hintTextColor="@color/indigo_A200"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:gravity="top"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:textColorHint="#757575"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_us_know_a_little_more_about_your_company_optional"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="25dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/does_your_job_require_you_to_travel_for_work"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="30dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_bg"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="15dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/blue_900"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"/>
                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_bg"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/blue_900"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"/>
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_are_your_working_days"
                android:textSize="17sp"
                android:textColor="@color/blue_900"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="30dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_bg"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="15dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/monday_to_friday"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/blue_900"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"/>
                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_bg"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monday_to_saturday"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/blue_900"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_bg"
                    android:layout_marginStart="15dp"
                    android:layout_weight="2"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="15dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alternate_saturdays_off"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/blue_900"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"/>
                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_bg"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/other"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/blue_900"
